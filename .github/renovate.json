{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>sarvex/renovate-configs:dart"],
  "packageRules": [
    {
      "matchPaths": ["mobile"],
      "groupName": "mobile"
    },
    {
      "matchPaths": ["server"],
      "groupName": "server"
    },
    {
      "matchPaths": ["web"],
      "groupName": "web"
    }
  ],
  "enabled": true
}
